<main>
    <section class="cats">
        <ul>
            {{#each cats}}
                <li>
                    <img src="{{this.img}}" alt="Black Cat">
                    <h3>{{this.name}}</h3>
                    <p><span>Breed: </span>{{this.breed}}</p>
                    <p><span>Description: </span>{{this.description}}</p>
                    <ul class="buttons">
                        <li class="btn edit"><a href="/cats/edit-cat/{{_id}}">Change Info</a></li>
                        <li class="btn delete"><a href="/cats/new-home/{{_id}}">New Home</a></li>
                    </ul>
                </li>
            {{/each}}
        </ul>
    </section>
</main>