<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{crypto.imageUrl}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{crypto.name}}</h1>
                <h3 id="payment">Payment method: ${{crypto.payment}}</h3>
                <p id="price"><span>Price: ${{crypto.price}}</span></p>
                <p id="description">{{crypto.description}}</p>
            </div>
            <div class="product-btn">
                {{#if user}}
                    {{#if isOwner}}
                    <div class="author">
                        <a href="/crypto/edit/{{crypto._id}}" class="btn-edit">Edit</a>
                        <a href="/crypto/delete/{{crypto._id}}" class="btn-delete">Delete</a>
                    </div>
                    {{else}}
                    {{#if isBought}}
                        <p class="buy-message">You already bought these crypto coins.</p>
                        {{else}}
                        <a href="/crypto/buy/{{crypto._id}}" class="btn-buy">Buy</a>
                    {{/if}}
                    {{/if}}
                {{/if}}

                <!--Only for registered user and author of the publication -->
                <!-- <div class="author">
                        <a href="#" class="btn-edit">Edit</a>
                        <a href="#" class="btn-delete">Delete</a>
                    </div> -->

                <!-- Logged in user who has not yet buy this crypto-->
                <!-- <a href="#" class="btn-buy">Buy</a> -->

                <!-- Logged in user who has already buy this crypto-->
                
            </div>
        </div>
    </section>
</main>

<footer>
    <p>Back-End 2022</p>
</footer>
</body>

</html>