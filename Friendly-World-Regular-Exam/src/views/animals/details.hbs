<main class="details">
    <section id="details">
        <div id="details-wrapper">
            <p id="details-title">Name: {{animal.name}}</p>
            <div id="img-wrapper">
                <img src="{{animal.imageUrl}}" />
            </div>
            <div id="info-wrapper">
                <table>
                    <tr>
                        <td>
                            <p>
                                Years: <span id="details-years">{{animal.years}}</span>
                            </p>
                        </td>
                        <td>
                            <p>Kind: <span id="details-kind">{{animal.kin}}</span></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Need of: <span id="details-need">{{animal.need}}</span></p>
                        </td>
                        <td>
                            <p>Location: <span id="details-location">{{animal.location}}</span></p>
                        </td>
                    </tr>
                </table>
                <p>Description: <span id="details-description">{{animal.description}}</span></p>
            </div>

            <div id="action-buttons">
                {{#if user}}
                {{#if isOwner}}
                <a href="/animals/edit/{{animal._id}}" id="edit-btn">Edit</a>
                <a href="/animals/delete/{{animal._id}}" id="delete-btn">Delete</a>
                {{else}}
                {{#unless isDonated}}
                <a href="/animals/donate/{{animal._id}}" id="donation-btn">Donation</a>
                {{else}}
                <p id="already-donated">You already donated!</p>
                {{/unless}}
                {{/if}}
                {{/if}}
            </div>
        </div>
    </section>
</main>