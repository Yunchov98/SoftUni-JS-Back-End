<!-- Details Page -->
<section id="catalog-section">

    <h1 class="item">
        {{modifyOffer.title}}
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{modifyOffer.imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>Vehicles</strong></p>
                <p>{{modifyOffer.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{modifyOffer.currentPrice}}</strong>
                    </div>

                    <!-- If current user can place a bid -->
                    {{#if user}}
                    {{#unless isHigherOffer}}
                    <form class="vertical" method="POST">
                        <label><span>Bid amount</span><input type="number" name="bid"></label>
                        <input class="action" type="submit" value="Place bid">
                    </form>
                    {{else}}
                    <div>
                        You are currently the <strong>highest bidder</strong> for this auction
                    </div>
                    {{/unless}}
                    {{/if}}
                    <!-- If current user is the bidder -->


                </div>

            </div>
        </div>

        <footer>Listed by {{authorFullName}}</footer>
    </div>

</section>