<!-- Edit Page -->
<section id="create-section">

    <h1 class="item">Edit Auction</h1>

    <div class="item padded align-center">

        <form class="layout left large" method="POST">

            <div class="col aligned">
                <label>
                    <span>Title</span>
                    <input type="text" name="title" value="{{offer.title}}"></label>
                <label>
                    <span>Category</span>
                    <select name="select">
                        {{#each options}}
                        <option value="{{value}}" {{#if selected}}selected{{/if}}>{{currentCategory}}</option>
                        {{/each}}
                    </select>
                </label>
                <label>
                    <span>Image URL</span>
                    <input type="text" name="imageUrl" value="{{offer.imageUrl}}">
                </label>
                <label>
                    <span>Starting price</span>

                    <!-- If the current auction has a bidder, this input field should be disabled -->
                    <input type="number" name="price" {{#if isBidder}}disabled{{/if}} value="{{offer.price}}">
                </label>
            </div>

            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description">{{offer.description}}</textarea>
                </label>

                <div class="align-center">
                    <input class="action" type="submit" value="Update Listing">
                </div>
            </div>

        </form>

    </div>

</section>