<!-- Details Page - Auction owner -->
<section id="catalog-section">

    <h1 class="item">
        {{modifyOffer.title}}
        <div class="f-right">
            <a class="action pad-small f-left" href="/auctions/edit/{{modifyOffer._id}}">Edit</a>
            <a class="action pad-small f-left" href="/auctions/delete/{{modifyOffer._id}}">Delete</a>
        </div>
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{modifyOffer.imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{modifyOffer.category}}</strong></p>
                <p>{{modifyOffer.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{modifyOffer.currentPrice}}</strong>
                    </div>

                    <div>
                        <!-- If there is a bidder -->
                        {{#if modifyOffer.isBidder}}
                        Bid by <strong>{{modifyOffer.higherOfferUserFullName}}</strong>
                        {{else}}
                        <!-- # Bonus: If there is a bidder --><!--

                                    <a class="action pad-med cta" href="#">Close Auction</a>
                                    
                                    # End of Bonus -->

                        <!-- If there are no bids -->
                        No bids
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>

        <footer>Listed by {{modifyOffer.authorFullName}}</footer>
    </div>

</section>