<!-- Details Page - Auction owner -->
<section id="catalog-section">

    <h1 class="item">
        {{offer.title}}
        <div class="f-right">
            <a class="action pad-small f-left" href="auctions/edit/{{offer._id}}">Edit</a>
            <a class="action pad-small f-left" href="auctions/delete/{{offer._id}}">Delete</a>
        </div>
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{offer.imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{category}}</strong></p>
                <p>Excellent condition. Onboard diesel motor, upholstered cockpit, fishing sonar. Includes
                    trailer.</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{offer.price}}</strong>
                    </div>

                    <div>
                        <!-- If there is a bidder -->
                        Bid by <strong>John Maclane</strong>

                        <!-- # Bonus: If there is a bidder --><!--

                                    <a class="action pad-med cta" href="#">Close Auction</a>
                                    
                                    # End of Bonus -->

                        <!-- If there are no bids -->
                        No bids
                    </div>
                </div>

            </div>
        </div>

        <footer>Listed by {{fullName}}</footer>
    </div>

</section>